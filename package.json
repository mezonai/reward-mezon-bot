{
  "name": "reward-mezon-bot",
  "version": "1.0.0",
  "description": "A mezon bot using Model Context Protocol with TypeScript",
  "main": "dist/index.js",
  "scripts": {
    "start": "tsc && node build/bot_reward.js",
    "dev": "nodemon --watch src --ext ts,js --exec \"npm start\"",
    "bot": " tsc && node build/bot_reward.js",
    "dev:bot": "nodemon --watch src --ext ts,js --exec \"npm run bot\"",
    "build": "rimraf build &&tsc",
    "watch": "tsc -w"
  },
  "keywords": [
    "mezon",
    "mcp",
    "claude"
  ],
  "dependencies": {
    "@google/genai": "^0.10.0",
    "@modelcontextprotocol/sdk": "^1.10.2",
    "@types/pg": "^8.11.14",
    "cron": "^4.3.0",
    "date-fns": "^4.1.0",
    "dotenv": "^16.4.1",
    "mezon-sdk": "^2.7.95",
    "pg": "^8.15.6",
    "redis": "^5.0.1",
    "sequelize": "^6.37.7",
    "zod": "^3.24.3"
  },
  "devDependencies": {
    "@types/amqplib": "^0.10.7",
    "@types/dotenv": "^8.2.0",
    "@types/node": "^20.11.0",
    "@types/redis": "^4.0.10",
    "@types/sequelize": "^4.28.20",
    "nodemon": "^3.0.2",
    "ts-node": "^10.9.2",
    "tsx": "^4.19.3",
    "typescript": "^5.3.3"
  }
}
