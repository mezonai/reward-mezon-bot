{
  "name": "reward-mezon-bot",
  "version": "1.0.0",
  "description": "A mezon bot using Model Context Protocol with TypeScript",
  "main": "dist/index.js",
  "scripts": {
    "start": "node dist/server.js",
    "dev": "tsc && node build/server.js",
    "bot": "nodemon --watch src --ext ts --exec tsx src/bot-test.ts",
    "build": "tsc",
    "watch": "tsc -w"
  },
  "keywords": [
    "mezon",
    "mcp",
    "claude"
  ],
  "dependencies": {
    "@google/genai": "^0.10.0",
    "@modelcontextprotocol/sdk": "^1.10.2",
    "dotenv": "^16.4.1",
    "mezon-sdk": "^2.7.86",
    "zod": "^3.24.3"
  },
  "devDependencies": {
    "@types/dotenv": "^8.2.0",
    "@types/node": "^20.11.0",
    "nodemon": "^3.0.2",
    "ts-node": "^10.9.2",
    "tsx": "^4.19.3",
    "typescript": "^5.3.3"
  }
}
